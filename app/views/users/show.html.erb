<div class = "titlepage">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class ="shelf-name">
        <h1><%= current_user.first_name %>'s Shelf</h1>
      </div>  
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <table class="table">
      <tbody>
        <tr>
          <% @stories.each do |story| %>
            <td><%= link_to story.title, story_path(story) %></td>
       </tr>
          <% end %>
      </tbody>
      </table>
    </div>
  </div>

  <button type="button" class="btn"><%= link_to "start a new story", new_story_path(current_user) %></button>
</div>

