<h2>Start a Story</h2>

  <%=form_for @story, url: {action: "create"} do |f| %>
    <div class="field">
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <%= f.label :description %><i>(optional)</i><br />
      <%= f.text_field :description %>
    </div>

    <div class="field">
      <%= f.label :first_line %><br />
      <%= f.text_area :first_line %>
    </div>

    <div class="actions">
      <%= f.submit "Create story" %>
    </div>
  <% end %>

